source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

target 'SlackKit OS X' do
	pod 'Starscream' :git => 'https://github.com/pvzig/Starscream.git', :branch => 'swift3'
	pod 'Swifter' :git => 'https://github.com/pvzig/swifter.git', :branch => 'master'
end

target 'SlackKit iOS' do
	pod 'Starscream' :git => 'https://github.com/pvzig/Starscream.git', :branch => 'swift3'
	pod 'Swifter' :git => 'https://github.com/pvzig/swifter.git', :branch => 'master'
end

target 'SlackKit tvOS' do
	pod 'Starscream' :git => 'https://github.com/pvzig/Starscream.git', :branch => 'swift3'
	pod 'Swifter' :git => 'https://github.com/pvzig/swifter.git', :branch => 'master'
end